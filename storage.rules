rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to protected-images folder
    match /protected-images/{imageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow the extension to create thumbnails
    match /protected-images_thumbnails/{imageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow reading of approved images in gallery
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
} 