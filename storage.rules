rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload and read their own images
    match /protected-images/{imageId} {
      allow read, write: if request.auth != null;
    }

    // Allow the Firebase extension (resize-images) to write thumbnails
    match /protected-images_thumbnails/{imageId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read any other files (e.g., public gallery or thumbnails)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 